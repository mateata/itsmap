<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_toolbar"
        layout="@layout/title_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MainColor"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/flipper_view"
            android:layout_marginLeft="@dimen/dash_img_space"
            android:layout_marginRight="@dimen/dash_img_space"
            android:layout_marginTop="@dimen/dash_img_space"
            android:background="@color/MainColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dashnews01"
                android:layout_width="210dp"
                android:layout_height="140dp"
                android:src="@drawable/dash_news1"/>
            <ImageView
                android:id="@+id/dashnews02"
                android:layout_width="210dp"
                android:layout_height="140dp"
                android:src="@drawable/dash_news2"/>
        </ViewFlipper>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dash_img_space"
            android:layout_marginRight="@dimen/dash_img_space"
            android:layout_marginTop="@dimen/dash_img_space"
            android:src="@drawable/dash_img1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dash_img_space"
            android:layout_marginRight="@dimen/dash_img_space"
            android:layout_marginTop="@dimen/dash_img_space"

            android:src="@drawable/dash_img2"/>
    </LinearLayout>



</LinearLayout>